{{>head}}
<body>
  {{>header}}
  <div class="container">
    <h1>{{name}} 🐟</h1>
    {{#if error}}
      <h2 class="error">error: {{error}} 😿</h2>
    {{/if}}
    <div class="detail-page">
      <main>
        <img class="frame" src="{{image_uri}}" alt="{{image_alt}}" />
        <h2>Comments ✏️</h2>
        <section class="comments-container">
          <ul class="comments">
            {{#if comments_error}}
              <li class="comment-error">Sorry, error getting comments 😿!</li>
            {{else}}
              {{#each comments}}
                <li class="comment">
                  <span class="timeStamp">{{this.timeStamp}}</span>
                  <pre class="comment-body">{{this.body}}</pre>
                </li>
              {{/each}}
            {{/if}}
          </ul>
          <textarea id="new-comment-field" placeholder="add your comment!"></textarea>
          <button id="save-comments-btn">save comments!</button>
          <span class="saved-msg hide">saved ☑️!</span>
        </section>
      </main>
      <aside>
        <h2>Museum notes 🦉</h2>
        <blockquote>
          {{museum_phrase}}
        </blockquote>
      </aside>
    </div>
  </div>
  {{>footer}}
</body>
</html>