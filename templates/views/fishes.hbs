{{>head}}
<body>
  {{>header}}
  <div class="container">
    <h1>fishes 🐟</h1>
    <main>
      {{#if error}}
      <h2 class="error">error: {{error}} 😿</h2>
      {{/if}}
      <div class="things">
        {{#each fish}}
          <div class="tooltip">
            <span class="tooltip-text">{{this.price}} 🔔</span>
            <a href="/fish/{{this.id}}">{{this.name.name-USen}}</a>
            <a href="/fish/{{this.id}}">
              <img src="{{this.image_uri}}" alt="{{this.name.name-USen}}">
            </a>
          </div>
        {{/each}}
      </div>
    </main>
  </div>
  {{>footer}}
</body>
</html>